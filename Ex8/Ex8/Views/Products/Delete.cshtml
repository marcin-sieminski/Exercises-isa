@model Product

@{
    ViewBag.Title = $"Delete {Model.Name}";
}

<h2>Delete @Model.Name</h2>
<form asp-action="Delete" asp-antiforgery="true" method="post">
    <div class="panel">
        <div class="panel-heading">
            Do you want to delete product: @Model.Name?
        </div>
        <div class="panel-body">
            <partial name="Partials/Product" model="Model"/>
        </div>
        <div class="panel-footer">
            <a class="btn btn-info" asp-controller="Products" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-danger">Yes</button>
        </div>
    </div>
</form>