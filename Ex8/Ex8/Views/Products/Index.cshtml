@model System.Collections.Generic.IList<Product>

@{
    Layout = "_Layout";
    ViewBag.Title = "Products";
}

<h3>Products</h3>

<table>
    <tr>
        <td><b>Id</b></td>
        <td><b>Name</b></td>
        <td><b>Description</b></td>
        <td><b>Price</b></td>
        <td><b>Actions</b></td>
    </tr>

    @foreach (Product product in Model)
    {
        <tr class="border border-secondary">
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td><a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" asp-route-someName="some value" class="btn btn-success">Edit</a></td>
            <td><a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" asp-route-someName="some value" class="btn btn-success">Delete</a></td>
        </tr>
    }
</table>
<br/>
<a asp-controller="Products" asp-action="Create" class="btn btn-success">Add product</a>
