@model StudentsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Birthdate
            </th>
            <th>
                Class
            </th>
            <th>
               Teacher id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var student in Model.Students) {
        <tr>
            <td>
                @student.FirstName
            </td>
            <td>
                @student.LastName
            </td>
            <td>
                @student.Birthdate
            </td>
            <td>
                @student.Class
            </td>
            <td>
                @student.TeacherId
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@student.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@student.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
